{
    "name": "hdaklue/actioncrumb",
    "description": "A fluent breadcrumb builder with dropdown actions for Laravel Livewire",
    "keywords": ["laravel", "livewire", "breadcrumb", "navigation", "tailwind"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Hassan Ibrahim",
            "email": "hassan@daklue.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "livewire/livewire": "^3.0",
        "blade-ui-kit/blade-icons": "^1.0",
        "blade-ui-kit/blade-heroicons": "^2.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Hdaklue\\Actioncrumb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hdaklue\\Actioncrumb\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hdaklue\\Actioncrumb\\ActioncrumbServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}